---
import LayoutBlog from './LayoutBlog.astro';

const { frontmatter } = Astro.props;
---

<LayoutBlog title={frontmatter.title}>
    <article class="mx-auto w-full xl:w-[740px] prose prose-invert prose-purple max-w-none
                  prose-h1:text-4xl prose-h1:font-bold prose-h1:mb-8
                  prose-h2:text-3xl prose-h2:font-semibold prose-h2:mb-6
                  prose-p:text-white/70 prose-p:text-lg prose-p:leading-relaxed
                  prose-a:text-purple-400 prose-a:no-underline hover:prose-a:underline
                  prose-code:text-purple-300 prose-code:bg-purple-500/10 prose-code:rounded-md prose-code:px-2 prose-code:py-1
                  prose-pre:bg-white/5 prose-pre:border prose-pre:border-white/10 prose-pre:rounded-xl
                  prose-strong:text-white/90 prose-strong:font-semibold
                  prose-hr:border-white/10 prose-hr:my-8
                  prose-ul:list-disc prose-ul:pl-6 prose-li:text-white/70
                  py-24">
        <header class="mb-8 not-prose">
            <time class="text-white/50 text-sm mb-2 block">
                {new Date(frontmatter.date).toLocaleDateString('es-ES', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric'
                })}
            </time>
            <h1 class="text-4xl font-bold text-white/90 mb-4">{frontmatter.title}</h1>
            <p class="text-xl text-white/70 mb-6">{frontmatter.description}</p>
            <div class="flex gap-2 flex-wrap">
                {frontmatter.tags.map((tag: string) => (
                    <span class="bg-purple-500/10 border border-purple-500/20 
                               rounded-full px-4 py-1 text-sm text-purple-400">
                        {tag}
                    </span>
                ))}
            </div>
        </header>
        
        <slot />
    </article>
</LayoutBlog>

<style is:global>
    /* Estilos específicos para bloques de código */
    .prose pre code {
        background-color: transparent !important;
        padding: 0 !important;
        border-radius: 0 !important;
    }
    
    .prose pre {
        padding: 1.5rem !important;
    }
    
    /* Ajustes para emojis en títulos */
    .prose h1 img, .prose h2 img {
        display: inline;
        margin: 0;
        vertical-align: middle;
    }
</style>
