---
import LayoutBlog from './LayoutBlog.astro'

interface Props {
    title: string;
    description: string;
    pubDate: Date;
    tags: string[];
}

const { title, description, pubDate, tags } = Astro.props;
---

<LayoutBlog title={`${title} - Blog de Fernando Trejo`} description={description}>
    <article class="mx-auto w-full py-44">
        <header class="mb-12">
            <h1 class="text-5xl font-bold text-white/80 mb-4">
                {title}
            </h1>
            <div class="flex flex-wrap items-center gap-4 text-white/60">
                <time class="text-sm">
                    {pubDate.toLocaleDateString('es-ES', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                    })}
                </time>
                <div class="flex gap-2">
                    {tags.map(tag => (
                        <span class="bg-white/5 border border-white/10 rounded-full px-3 py-1 text-xs text-white/70">
                            {tag}
                        </span>
                    ))}
                </div>
            </div>
        </header>

        <div class="prose prose-invert max-w-none prose-p:text-white/70 prose-headings:text-white/80 prose-strong:text-white/80 prose-a:text-blue-400">
            <slot />
        </div>
    </article>
</LayoutBlog>
